<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Camps!!</p>
            <div class="list-group">
                <li class="list-group-item">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="img-thumbnail">
                <img class="img-fluid" src="<%= data.image %>">
                <div class="caption-full">
                    <h6 style="color:darkgreen " class="float-right">â‚¹<%= data.price %> per Night</h6>
                    <h4><a href="/campgrounds/<%= data._id %>/comments/new"><%= data.name %></a></h4>
                    <p><%= data.description %></p>
                    <p>
                        <em>Submitted By <%= data.author.username %></em>
                    </p>
                    <% if(currentUser && data.author.id.equals(currentUser._id)) { %>
                        <a class="btn btn-warning" href="/campgrounds/<%= data._id %>/edit">Edit</a>
                        <form class="delete" action="/campgrounds/<%= data._id %>?_method=Delete" method="POST">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    <% } %>
                </div>
            </div>
            <div><p></p></div>
            <div class="card bg-light p-3">
                <div class="text-right">
                    <a class="btn btn-success" href="/campgrounds/<%= data._id %>/comments/new">Add New Comment</a>
                </div>
                <hr>
                <% data.comment.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author.username %></strong>
                            <span class="float-right">10 days ago</span>
                            <p><%=comment.text %></p>
                            <% if(currentUser && comment.author.id.equals(currentUser._id)) { %>
                            <a class="btn btn-sm btn-warning" href="/campgrounds/<%= data._id %>/comments/<%= comment._id %>/edit">Edit</a>
                            <form class="delete" action="/campgrounds/<%= data._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
                                <input  type="submit" class="btn btn-sm btn-danger" value="Delete">
                            </form>
                            <% }; %>
                            <% }); %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div><p></p></div>

<% include ../partials/footer %>